---
interface Post {
  url?: string;
  title: string;
  description?: string;
  image?: string;
}

interface Props {
  relatedPosts: Post[];
}

const { relatedPosts } = Astro.props;
---

<section class="baca-juga">
  <div class="container">
    <h2>Baca Juga</h2>
    <div class="post-grid">
      {relatedPosts.map(post => (
        <a href={post.url || '#'} class="post-card">
          {post.image && (
            <img src={post.image} alt={post.title} class="card-image" loading="lazy" />
          )}
          <div class="card-content">
            <h3>{post.title}</h3>
            {post.description && <p>{post.description}</p>}
            <span class="read-more">Selengkapnya &rarr;</span>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .baca-juga {
    padding: 4rem 0;
    background-color: var(--background-color);
    border-top: 1px solid #eee;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  h2 {
    font-size: 2.5rem;
    color: var(--secondary-color);
    text-align: center;
    margin-bottom: 3rem;
  }

  .post-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .post-card {
    display: block;
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 15px rgba(0,0,0,0.05);
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid #eee;
  }

  .post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 25px rgba(0,0,0,0.1);
  }

  .card-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    background-color: #f0f0f0;
  }

  .card-content {
    padding: 1.5rem;
  }

  .card-content h3 {
    font-size: 1.25rem;
    color: var(--secondary-color);
    margin: 0 0 0.75rem 0;
    line-height: 1.4;
  }

  .card-content p {
    font-size: 1rem;
    line-height: 1.6;
    margin: 0 0 1rem 0;
    color: #555;
    /* Clamp text to 3 lines */
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;  
    overflow: hidden;
  }

  .read-more {
    font-weight: 700;
    color: var(--primary-color);
  }
</style>
