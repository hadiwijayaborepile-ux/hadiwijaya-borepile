---
import { Image } from 'astro:assets';
import logo from '../assets/img/hbp-logo.png';

const socialLinks = [
  { name: 'Facebook', icon: 'fab fa-facebook-f', href: '#' },
  { name: 'Instagram', icon: 'fab fa-instagram', href: '#' },
  { name: 'LinkedIn', icon: 'fab fa-linkedin-in', href: '#' },
  { name: 'Twitter', icon: 'fab fa-twitter', href: '#' },
];

const navLinks = [
    { name: 'Beranda', href: '/' },
    { name: 'Services', href: '/services/jasa-bore-pile' },
    { name: 'About Us', href: '/about' },
    { name: 'Contact', href: '/contact' },
];

const layananLinks = [
    { name: 'Jasa', href: '/services/jasa-bore-pile' },
    { name: 'Blog', href: '/blog' },
    { name: 'Privacy Policy', href: '/privacy-policy' },
    { name: 'Return & Refund Policy', href: '/return-policy' },
];
---
<footer>
    <div class="footer-container">
        <div class="footer-about">
            <Image src={logo} alt="Hadiwijaya Bore Pile Logo" class="footer-logo" width={150} height={50} />
            <p>Hadiwijaya Bore Pile - Partner Konstruksi Bore Pile dengan Reputasi Terbaik.</p>
        </div>

        <div class="footer-contact">
            <h4>Kontak Kami</h4>
            <p><strong>Grobogan Head Office:</strong></p>
            <p>Manggihan, RT.02/RW.03, Sambung, Kec. Godong, Kabupaten Grobogan, Jawa Tengah 58162, Indonesia</p>
            <p><i class="fas fa-phone"></i> 0812-3362-4549</p>
            <p><i class="fas fa-envelope"></i> info@hadiningratcorp.com</p>
        </div>

        <div class="footer-links">
            <h4>Navigasi</h4>
            <ul>
                {navLinks.map(link => <li><a href={link.href}>{link.name}</a></li>)}
            </ul>
        </div>
        
        <div class="footer-links">
            <h4>Layanan</h4>
            <ul>
                {layananLinks.map(link => <li><a href={link.href}>{link.name}</a></li>)}
            </ul>
        </div>

        <div class="footer-social">
            <h4>Ikuti Kami</h4>
            <div class="social-icons">
                {socialLinks.map(link => (
                    <a href={link.href} aria-label={link.name} target="_blank" rel="noopener noreferrer">
                        <i class={link.icon}></i>
                    </a>
                ))}
            </div>
        </div>
    </div>
    <div class="footer-bottom">
        <p>&copy; {new Date().getFullYear()} Hadiwijaya Bore Pile. All Rights Reserved.</p>
    </div>
</footer>

<style>
    footer {
        background-color: var(--secondary-color);
        color: #e0e0e0;
        padding: 5rem 2rem 0;
        font-size: 0.95rem;
    }
    .footer-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 3rem;
        max-width: 1300px;
        margin: 0 auto;
        padding-bottom: 3rem;
    }
    .footer-logo {
        height: 50px;
        margin-bottom: 1rem;
        background-color: white;
        padding: 5px;
        border-radius: 5px;
    }
    .footer-about {
        max-width: 300px; /* Prevent it from getting too wide */
    }
    .footer-about p {
        line-height: 1.6;
    }
    h4 {
        color: white;
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
        position: relative;
    }
    h4::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 40px;
        height: 3px;
        background-color: var(--primary-color);
    }
    .footer-contact p {
        margin-bottom: 0.75rem;
    }
    .footer-contact i {
        color: var(--primary-color);
        margin-right: 10px;
    }
    .footer-links ul {
        list-style: none;
        padding: 0;
    }
    .footer-links li {
        margin-bottom: 0.85rem;
    }
    .footer-links a {
        color: #e0e0e0;
        text-decoration: none;
        transition: color 0.3s, padding-left 0.3s;
    }
    .footer-links a:hover {
        color: var(--primary-color);
        padding-left: 5px;
    }
    .social-icons {
        display: flex;
        flex-wrap: wrap; /* Allow icons to wrap */
        gap: 1rem;
    }
    .social-icons a {
        color: white;
        background: rgba(255,255,255,0.1);
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        text-decoration: none;
        transition: background-color 0.3s, transform 0.3s;
    }
    .social-icons a:hover {
        background-color: var(--primary-color);
        transform: translateY(-3px);
    }
    .footer-bottom {
        border-top: 1px solid rgba(255,255,255,0.1);
        text-align: center;
        padding: 1.5rem 0;
        margin-top: 2rem;
    }
</style>