---
const navLinks = [
  { name: 'Beranda', href: '/' },
  {
    name: 'Services',
    isDropdown: true,
    dropdownLinks: [
      { name: 'Jasa Bore Pile', href: '/services/jasa-bore-pile' },
      { name: 'Bore Pile Manual', href: '/services/manual' },
      { name: 'Bore Pile Mini Crane', href: '/services/mini-crane' },
      { name: 'Bore Pile Mini Hydraulic', href: '/services/mini-hydraulic' },
      { name: 'Bore Pile Hydraulic', href: '/services/hydraulic' },
    ],
  },
  { name: 'About Us', href: '/about' },
  { name: 'Contact Us', href: '/contact' },
];
--- 

<header id="main-header">
    <div class="nav-container">
        <a href="/" class="logo">
            <img src="/assets/img/hbp-logo.png" alt="Hadiwijaya Pondasi Persada Logo" />
        </a>
        <nav>
            <ul class="nav-links">
                {navLinks.map(link => (
                <li class={link.isDropdown ? 'dropdown' : ''}>
                    {link.href ? <a href={link.href}>{link.name}</a> : <span>{link.name} <i class="fas fa-chevron-down"></i></span>}
                    {link.isDropdown && (
                    <ul class="dropdown-menu">
                        {link.dropdownLinks.map(dropdownLink => (
                        <li><a href={dropdownLink.href}>{dropdownLink.name}</a></li>
                        ))}
                    </ul>
                    )}
                </li>
                ))}
            </ul>
        </nav>
        <a href="/contact" class="nav-cta">Get a Quote</a>
        <button id="mobile-menu-toggle"><i class="fas fa-bars"></i></button>
    </div>
</header>

<div id="mobile-menu" class="mobile-menu-hidden">
    <ul>
        {navLinks.map(link => (
          <li>
            {link.href ? <a href={link.href}>{link.name}</a> : <span>{link.name}</span>}
            {link.isDropdown && (
              <ul class="mobile-dropdown">
                {link.dropdownLinks.map(dropdownLink => (
                  <li><a href={dropdownLink.href}>- {dropdownLink.name}</a></li>
                ))}
              </ul>
            )}
          </li>
        ))}
    </ul>
</div>

<script>
  const toggleButton = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  
  toggleButton.addEventListener('click', () => {
    mobileMenu.classList.toggle('mobile-menu-hidden');
  });
</script>

<style>
  header {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    width: 90%;
    max-width: 1200px;
    z-index: 1000;
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(10px);
    border-radius: 50px;
    padding: 0.5rem 1.5rem; /* Reduced padding slightly for logo */
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    border: 1px solid rgba(255,255,255,0.9);
  }

  .logo img {
    height: 40px; /* Control logo size */
    display: block;
  }

  .nav-links {
    list-style: none;
    display: flex;
    gap: 2.5rem;
    margin: 0;
    padding: 0;
    align-items: center;
  }
  
  .nav-links a, .nav-links span {
    text-decoration: none;
    color: var(--text-color);
    font-weight: 500;
    transition: color 0.3s;
    cursor: pointer;
  }
  
  .nav-links a:hover, .nav-links span:hover {
    color: var(--primary-color);
  }
  
  .nav-links span i {
      font-size: 0.7rem; margin-left: 5px;
  }

  /* Dropdown */
  .dropdown {
    position: relative;
    padding-bottom: 20px; /* Bridge the gap */
    margin-bottom: -20px; /* Prevent layout shift */
  }

  .dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    background: white;
    list-style: none;
    padding: 0.5rem 0;
    margin: 0;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    min-width: 220px;
    border: 1px solid #eee;
  }

  .dropdown:hover .dropdown-menu {
    display: block;
  }

  .dropdown-menu li {
    padding: 0;
    margin: 0;
  }

  .dropdown-menu a {
    display: block;
    padding: 0.75rem 1.5rem;
    white-space: nowrap;
  }
  
  .nav-cta {
      background: var(--primary-color);
      color: white;
      text-decoration: none;
      padding: 0.6rem 1.2rem;
      border-radius: 50px;
      font-weight: 500;
      transition: all 0.3s;
  }
  .nav-cta:hover {
      background: #e65200;
      transform: scale(1.05);
  }
  
  /* Mobile Menu */
  #mobile-menu-toggle {
    display: none;
    background: none; border: none; font-size: 1.5rem; color: var(--secondary-color);
  }
  #mobile-menu { display: none; }

  @media (max-width: 768px) {
    .nav-links, .nav-cta { display: none; }
    #mobile-menu-toggle { display: block; }
    .nav-container { width: 95%; padding: 0.5rem 1rem; }
    
    #mobile-menu {
        display: block;
        background-color: white;
        position: fixed;
        top: 90px;
        left: 5%; right: 5%;
        z-index: 999;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        border-radius: 20px;
        padding: 1rem;
        transition: all 0.3s ease-in-out;
    }
    #mobile-menu.mobile-menu-hidden {
        transform: translateY(-150%); opacity: 0;
    }
    /* ... mobile styles ... */
  }
</style>