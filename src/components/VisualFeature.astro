<style>
  .visual-feature {
    padding: 6rem 0;
    background-color: var(--background-color);
  }
  .visual-feature .container {
    max-width: 1100px;
  }
  .feature-intro {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 4rem auto;
  }
  .feature-intro h2 {
    font-size: 2.8rem;
    color: var(--secondary-color);
    margin-bottom: 1rem;
  }
  .feature-intro p {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #555;
  }

  .bore-pile-explanation {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 4rem;
    background: white;
    padding: 3rem;
    border-radius: 12px;
    margin-bottom: 5rem;
  }
  .explanation-text h3 {
    font-size: 2rem;
    color: var(--secondary-color);
    margin-bottom: 1rem;
  }
  .explanation-text p {
    font-size: 1.05rem;
    line-height: 1.8;
    color: #444;
  }
  .explanation-diagram {
    align-self: center;
    justify-self: center;
  }
  .bore-pile-image {
    width: 100%;
    max-width: 400px;
    height: auto;
    display: block;
    border-radius: 12px;
  }

  .tools-comparison {
    text-align: center;
  }
  .tools-comparison h3 {
    font-size: 2.2rem;
    color: var(--secondary-color);
    margin-bottom: 1rem;
  }
  .tools-comparison > p {
    max-width: 600px;
    margin: 0 auto 3rem auto;
    color: #555;
  }
  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    align-items: stretch; 
  }
  .tool-card {
    background: white;
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }
  .card-content {
    flex-grow: 1; 
    display: flex;
    flex-direction: column;
  }
  .tool-card:hover, .tool-card.active {
    transform: translateY(-10px);
  }
  .card-header {
    display: flex;
    align-items: center; 
    gap: 1rem;
    margin-bottom: 1rem;
    height: 90px; 
  }
  .card-icon {
    width: 50px;
    height: 50px;
    flex-shrink: 0;
  }
  .tool-card h4 {
    font-size: 1.3rem;
    color: var(--secondary-color);
    margin: 0;
    text-align: left;
  }
  .tool-card p {
    font-size: 0.95rem;
    line-height: 1.7;
    margin-bottom: 1.5rem;
    color: #444;
    flex-grow: 1;
    text-align: left;
  }
  .charts {
    margin-bottom: 2rem;
  }
  .chart-item {
    margin-bottom: 0.75rem;
  }
  .chart-item span {
    display: block;
    font-size: 0.8rem;
    font-weight: 600;
    color: #666;
    margin-bottom: 0.25rem;
  }
  .bar-container {
    width: 100%;
    height: 12px;
    background: #e0e5ee;
    border-radius: 6px;
    overflow: hidden;
  }
  .bar {
    height: 100%;
    background: linear-gradient(90deg, var(--primary-color), #ff8c42);
    border-radius: 6px;
  }
  .cta-card {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    width: 100%;
    padding: 0.8rem 1rem;
    border-radius: 8px;
    text-align: center;
    text-decoration: none;
    font-weight: 700;
    background: #e9ecef;
    color: var(--secondary-color);
    transition: all 0.3s ease;
    box-sizing: border-box; 
  }
  .cta-card:hover {
    background: var(--secondary-color);
    color: white;
  }
  .cta-card.cta-main {
    background: var(--primary-color);
    color: white;
  }
  .cta-card.cta-main:hover {
    background: #e65200;
  }

  .post-grid-cta {
    margin-top: 4rem;
    padding: 2.5rem;
    background-color: #ffffff;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }
  .post-grid-cta p {
    font-size: 1.3rem;
    line-height: 1.6;
    color: var(--secondary-color);
    font-weight: 500;
    margin: 0;
    text-align: left;
  }
  .post-grid-cta .cta-button {
    flex-shrink: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
    padding: 0.9rem 2.2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.05rem;
    background-color: var(--primary-color);
    color: white;
    transition: all 0.3s ease;
  }
  .post-grid-cta .cta-button:hover {
    transform: translateY(-3px);
  }

  .external-link-icon {
    display: inline-block;
    width: 1em;
    height: 1em;
  }

  @media (max-width: 992px) {
    .post-grid-cta {
        flex-direction: column;
        text-align: center;
    }
    .post-grid-cta p {
        margin-bottom: 1.5rem;
        text-align: center;
    }
  }

  @media (max-width: 768px) {
    .feature-intro h2 {
      font-size: 1.8rem;
      font-weight: 700;
    }
    .bore-pile-explanation {
      grid-template-columns: 1fr;
    }
  }
</style>