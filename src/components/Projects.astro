  {
    title: "Proyek Gudang PT Hardo Soloplast",
    description: "Lokasi: Karanganyar, Solo.",
    image: "/assets/img/proyek/1.png",
  },
  {
    title: "Proyek Gedung Pusat Data “Cloud Core”",
    description: "Lokasi: Cikarang, Jawa Barat.",
    image: "/assets/img/proyek/2.png",
  },
  {
    title: "Pembangunan Hotel Bintang 4 “Grand Paradise”",
    description: "Lokasi: Yogyakarta.",
    image: "/assets/img/proyek/3.png",
  },
  {
    title: "Proyek Perumahan Cluster “Puspita Asri”",
    description: "Lokasi: Semarang.",
    image: "/assets/img/proyek/4.png",
  },
  {
    title: "Proyek Perkantoran “Tower Biznet”",
    description: "Lokasi: Semarang.",
    image: "/assets/img/proyek/5.png",
  },
  {
    title: "Pembangunan Fasilitas Golf Semarang “BSB Golf”",
    description: "Lokasi: Semarang, Jawa Tengah.",
    image: "/assets/img/proyek/6.png",
  }
];

const initialVisibleProjects = 3;
---

<section class="latest-projects">
  <div class="container">
    <h2 class="fade-in-on-scroll">Proyek Terbaru Kami</h2>
    <div id="project-grid" class="project-grid stagger-children">
      {projects.map((project, index) => (
        <div class="project-card" data-index={index}>
          <a 
            href={project.image} 
            class="card-image-wrapper"
            data-fancybox="projects"
            data-caption={`<h3>${project.title}</h3><p>${project.description}</p>`}
          >
            <img src={project.image} alt={project.title} loading="lazy" />
          </a>
          <div class="card-content">
            {/* Label kategori telah dihapus dari sini */}
            <h3>{project.title}</h3>
            <p>{project.description}</p>
          </div>
        </div>
      ))}
    </div>
    <div class="cta-container fade-in-on-scroll">
      <button id="toggle-projects-btn" class="cta-button">
        Lihat Lebih Banyak
      </button>
    </div>
  </div>
</section>

<script>
  function setupProjectsToggle() {
    const initialVisible = 3;
    const toggleBtn = document.getElementById('toggle-projects-btn');
    const projectCards = document.querySelectorAll('.project-card[data-index]');
    
    if (!toggleBtn || projectCards.length <= initialVisible) {
      if(toggleBtn) toggleBtn.style.display = 'none';
      return;
    }

    let areExtraVisible = false;

    const updateVisibility = () => {
      projectCards.forEach(card => {
        const index = parseInt((card as HTMLElement).dataset.index || '0');
        if (index >= initialVisible) {
          (card as HTMLElement).style.display = areExtraVisible ? 'block' : 'none';
        }
      });
      toggleBtn.textContent = areExtraVisible ? 'Lihat Lebih Sedikit' : 'Lihat Lebih Banyak';
    };

    toggleBtn.addEventListener('click', () => {
      areExtraVisible = !areExtraVisible;
      updateVisibility();
    });

    // Initial setup
    updateVisibility();
  }

  document.addEventListener('astro:page-load', setupProjectsToggle);
</script>

<style>
  .latest-projects {
    background-color: var(--background-color);
    text-align: center;
    padding: 5rem 0;
  }

  .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .project-card {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    text-align: left;
    display: flex;
    flex-direction: column;
  }

  .card-image-wrapper {
    width: 100%;
    padding-top: 133.33%; /* 3:4 Aspect Ratio */
    position: relative;
    display: block;
    border-radius: 12px 12px 0 0;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .card-image-wrapper:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.12);
  }

  .project-card img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .project-card .card-content {
    padding: 1.5rem;
    flex-grow: 1;
    margin-top: -10px;
    position: relative;
    z-index: 2;
    background: #fff;
    border-radius: 0 0 12px 12px;
  }

  /* Definisi gaya untuk .category telah dihapus */

  .project-card h3 {
    margin-top: 0;
    font-size: 1.3rem;
    color: var(--secondary-color);
    margin-bottom: 0.5rem; /* Menambahkan sedikit margin bawah setelah kategori dihapus */
  }

  .project-card p {
    font-size: 0.95rem;
    color: #666;
    line-height: 1.6;
  }

  .cta-container {
    margin-top: 3rem;
    text-align: center;
  }

  .cta-button {
    background-color: white;
    color: var(--primary-color);
    border: 2px solid var(--primary-color);
    padding: 0.8rem 2.5rem;
    font-size: 1rem;
    font-weight: 700;
    border-radius: 50px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .cta-button:hover {
    background-color: var(--primary-color);
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }
</style>