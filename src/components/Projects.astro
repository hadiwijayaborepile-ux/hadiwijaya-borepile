---
const projects = [
  {
    title: "Proyek Gudang PT Hardo Soloplast",
    description: "Lokasi: Karanganyar, Solo.",
    image: "/assets/img/proyek/1.png",
    category: "Industri"
  },
  {
    title: "Proyek Gedung Pusat Data “Cloud Core”",
    description: "Lokasi: Cikarang, Jawa Barat.",
    image: "/assets/img/proyek/2.png",
    category: "Teknologi"
  },
  {
    title: "Pembangunan Hotel Bintang 4 “Grand Paradise”",
    description: "Lokasi: Yogyakarta.",
    image: "/assets/img/proyek/3.png",
    category: "Pariwisata"
  },
  {
    title: "Proyek Perumahan Cluster “Puspita Asri”",
    description: "Lokasi: Semarang.",
    image: "/assets/img/proyek/4.png",
    category: "Residential"
  },
  {
    title: "Proyek Perkantoran “Tower Biznet”",
    description: "Lokasi: Semarang.",
    image: "/assets/img/proyek/5.png",
    category: "Komersial"
  },
  {
    title: "Pembangunan Fasilitas Golf Semarang “BSB Golf”",
    description: "Lokasi: Semarang, Jawa Tengah.",
    image: "/assets/img/proyek/6.png",
    category: "Rekreasi"
  }
];

const initialVisibleProjects = 3;
---

<section class="latest-projects">
  <div class="container">
    <h2>Proyek Terbaru Kami</h2>
    <div id="project-grid" class="project-grid">
      {projects.map((project, index) => (
        <div 
          class={`project-card ${index >= initialVisibleProjects ? 'initially-hidden' : ''}`}>
          <img src={project.image} alt={project.title} loading="lazy" />
          <div class="card-content">
            <span class="category">{project.category}</span>
            <h3>{project.title}</h3>
            <p>{project.description}</p>
          </div>
        </div>
      ))}
    </div>
    <div class="cta-container">
        <button id="toggle-projects-btn" class="cta-button">
            Lihat Lebih Banyak
        </button>
    </div>
  </div>
</section>

<script>
  document.addEventListener('astro:page-load', () => {
    const toggleBtn = document.getElementById('toggle-projects-btn');
    const projectGrid = document.getElementById('project-grid');
    const allCards = Array.from(projectGrid.children);
    const initialVisible = 3;
    const initiallyHiddenCards = allCards.slice(initialVisible);
    let areVisible = false;

    // Hide cards initially
    initiallyHiddenCards.forEach(card => {
        (card as HTMLElement).style.display = 'none';
    });

    if (toggleBtn && initiallyHiddenCards.length > 0) {
      toggleBtn.addEventListener('click', () => {
        areVisible = !areVisible; // Toggle the state

        initiallyHiddenCards.forEach(card => {
          (card as HTMLElement).style.display = areVisible ? 'block' : 'none';
        });

        toggleBtn.textContent = areVisible ? 'Lihat Lebih Sedikit' : 'Lihat Lebih Banyak';
      });
    } else if (toggleBtn) {
        // If there are no hidden cards, hide the button itself
        (toggleBtn.parentNode as HTMLElement).style.display = 'none';
    }
  });
</script>

<style>
  .latest-projects {
    background-color: var(--background-color);
    text-align: center;
    padding: 5rem 0;
  }

  .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .project-card {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    text-align: left;
  }

  .project-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.12);
  }

  .project-card img {
    width: 100%;
    height: 220px;
    object-fit: cover;
  }

  .project-card .card-content {
    padding: 1.5rem;
  }

  .project-card .category {
    display: inline-block;
    background-color: var(--primary-color-light);
    color: var(--primary-color);
    padding: 0.3rem 0.8rem;
    border-radius: 50px;
    font-size: 0.8rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
  }

  .project-card h3 {
    margin-top: 0;
    font-size: 1.3rem;
    color: var(--secondary-color);
  }

  .project-card p {
    font-size: 0.95rem;
    color: #666;
    line-height: 1.6;
  }

  .cta-container {
    margin-top: 2rem;
  }

  .cta-button {
    background-color: var(--primary-color);
    color: white;
    border: none;
    padding: 0.8rem 2rem;
    font-size: 1rem;
    font-weight: 700;
    border-radius: 50px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none; /* In case it's an anchor */
  }

  .cta-button:hover {
    background-color: #e65200;
    transform: translateY(-3px);
    box-shadow: 0 6px 12px rgba(255, 107, 0, 0.3);
  }
</style>
