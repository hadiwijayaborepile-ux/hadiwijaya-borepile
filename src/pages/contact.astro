---
import Layout from '../layouts/Layout.astro';

const title = "Kontak & Penawaran Jasa Bore Pile | Hadiwijaya Pondasi Persada";
const description = "Hubungi Hadiwijaya Pondasi Persada untuk konsultasi dan penawaran harga jasa bore pile. Dapatkan estimasi biaya untuk proyek Anda melalui telepon, WhatsApp, atau email. Kami siap melayani.";
const keywords = ["kontak kontraktor bore pile", "penawaran harga bore pile", "alamat perusahaan bore pile", "nomor telepon kontraktor pondasi", "konsultasi proyek bore pile", "jasa bore pile grobogan", "kontak hadiwijaya"];
---

<Layout title={title} description={description} keywords={keywords}>
  <section class="contact-header">
    <h1>Hubungi Kami</h1>
    <p>Kami siap mendengar dari Anda. Baik untuk pertanyaan, penawaran, maupun konsultasi proyek.</p>
  </section>

  <section class="contact-body">
    <div class="contact-container">
      <!-- Contact Form Column -->
      <div class="form-wrapper">
        <h2>Kirim Pesan Langsung</h2>
        <form id="contact-page-form">
          <div class="form-group">
            <label for="name">Nama Lengkap</label>
            <input type="text" id="name" name="name" placeholder="Contoh: John Doe" required>
          </div>
          <div class="form-group">
            <label for="email">Alamat Email</label>
            <input type="email" id="email" name="email" placeholder="Contoh: email@anda.com" required>
          </div>
          <div class="form-group">
            <label for="subject">Subjek Pesan</label>
            <input type="text" id="subject" name="subject" placeholder="Contoh: Penawaran Proyek Rumah" required>
          </div>
          <div class="form-group">
            <label for="message">Pesan Anda</label>
            <textarea id="message" name="message" rows="6" placeholder="Tuliskan detail kebutuhan atau pertanyaan Anda di sini..." required></textarea>
          </div>
          <button type="submit" class="cta-primary">Kirim Pesan</button>
        </form>
      </div>

      <!-- Info & Map Column -->
      <div class="info-wrapper">
        <h2>Informasi Kontak</h2>
        <p>Hubungi kami melalui detail di bawah atau temukan kami di lokasi.</p>
        
        <ul class="contact-details">
          <li>
            <i class="fas fa-map-marker-alt"></i>
            <span>Jalan Cempaka No. 34, Manggihan, Kec. Godong Kab. Grobogan</span>
          </li>
          <li>
            <i class="fas fa-phone"></i>
            <span>0813-2579-4818</span>
          </li>
          <li>
            <i class="fas fa-envelope"></i>
            <span>info@hadiningratcorp.com</span>
          </li>
        </ul>

        <div class="map-container">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3961.851921475762!2d110.808316!3d-6.982261!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e7058ed059e7cbf%3A0x92f69460c5c3c866!2sJl.+Cemp.%2C+Manggihan%2C+Kec.+Godong%2C+Kabupaten+Grobogan%2C+Jawa+Tengah+58162!5e0!3m2!1sen!2sid!4v1680000000000"
            width="100%" 
            height="350" 
            style="border:0; border-radius: 8px;"
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade">
          </iframe>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const contactForm = document.getElementById('contact-page-form');
    if (contactForm) {
      contactForm.addEventListener('submit', function (event) {
        event.preventDefault();

        const name = event.target.name.value;
        const email = event.target.email.value;
        const subject = event.target.subject.value;
        const message = event.target.message.value;

        const whatsappNumber = "6281325794818";
        const whatsappMessage = `Halo, saya ${name}.\nEmail: ${email}\nSubjek: ${subject}\n\nPesan:\n${message}`;

        const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;

        window.open(whatsappUrl, '_blank');
      });
    }
  });
</script>

<style>
  .contact-header {
    background-color: var(--secondary-color);
    color: white;
    text-align: center;
    padding: 8rem 2rem 4rem 2rem; /* Increased top padding */
  }
  .contact-header h1 {
    font-size: 3rem;
    margin: 0;
  }
  .contact-header p {
    font-size: 1.2rem;
    max-width: 600px;
    margin: 0.5rem auto 0;
    opacity: 0.9;
  }

  .contact-body {
    padding: 5rem 0;
  }

  .contact-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: 3fr 2fr;
    gap: 4rem;
  }

  .form-wrapper h2, .info-wrapper h2 {
    font-size: 2.2rem;
    color: var(--secondary-color);
    margin-top: 0;
    margin-bottom: 1.5rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: #333;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 1rem;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: 1rem;
    box-sizing: border-box;
    transition: border-color 0.3s, box-shadow 0.3s;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(255, 107, 0, 0.2);
    outline: none;
  }

  .cta-primary {
    padding: 0.9rem 2rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 700;
    transition: all 0.3s ease;
    background-color: var(--primary-color);
    color: white;
    border: 2px solid var(--primary-color);
    cursor: pointer;
    width: 100%;
    font-size: 1.1rem;
  }

  .cta-primary:hover {
    background-color: #e65200;
    border-color: #e65200;
  }

  /* Info Wrapper */
  .info-wrapper p {
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .contact-details {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem 0;
  }

  .contact-details li {
    display: flex;
    align-items: flex-start;
    margin-bottom: 1.5rem;
    font-size: 1.05rem;
  }

  .contact-details li i {
    font-size: 1.4rem;
    color: var(--primary-color);
    margin-right: 1.5rem;
    margin-top: 4px;
    width: 25px;
    text-align: center;
  }
  
  .map-container {
    margin-top: 2rem;
  }

  /* Responsive */
  @media (max-width: 992px) {
    .contact-container {
      grid-template-columns: 1fr;
      gap: 5rem;
    }
  }
</style>
