---
import Layout from '../layouts/Layout.astro';
import PageHero from '../components/PageHero.astro';

const title = "Kontak & Penawaran Jasa Bore Pile | Hadiwijaya Bore Pile";
const description = "Hubungi Hadiwijaya Bore Pile untuk konsultasi dan penawaran harga jasa bore pile. Dapatkan estimasi biaya untuk proyek Anda melalui telepon, WhatsApp, atau email. Kami siap melayani.";
const keywords = ["kontak kontraktor bore pile", "penawaran harga bore pile", "alamat perusahaan bore pile", "nomor telepon kontraktor pondasi", "konsultasi proyek bore pile", "jasa bore pile grobogan", "kontak hadiwijaya"];

const organizationSchema = {
  "@context": "https://schema.org",
  "@graph": {
    "@type": ["HomeAndConstructionBusiness", "Organization"],
    "@id": "https://hadiwijayaborepile.co.id/#organization",
    "name": "Hadiwijaya Bore Pile",
    "url": "https://hadiwijayaborepile.co.id",
    "sameAs": [
      "https://www.facebook.com/hadiwijayaborepilejasaborepilejawatengahjogjakarta/",
      "https://www.instagram.com/hadiwijaya_bore_pile/",
      "https://www.pinterest.com/hadiwijayaborepile/",
      "maps.app.goo.gl/MNy1REVADT8A2wzB6"
    ],
    "email": "info@hadiningratcorp.com",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Manggihan, RT.02/RW.03, Sambung, Kec. Godong",
      "addressLocality": "Grobogan",
      "addressRegion": "Jawa Tengah",
      "postalCode": "58162",
      "addressCountry": "ID"
    },
    "logo": {
      "@type": "ImageObject",
      "@id": "https://hadiwijayaborepile.co.id/#logo",
      "url": "https://hadiwijayaborepile.co.id/src/assets/img/hbp-logo.png",
      "contentUrl": "https://hadiwijayaborepile.co.id/src/assets/img/hbp-logo.png",
      "caption": "Hadiwijaya Bore Pile",
      "inLanguage": "id",
      "width": "192",
      "height": "108"
    },
    "priceRange": "$",
    "openingHours": ["Tuesday,Wednesday,Thursday,Friday,Saturday,Sunday,Monday 24 hours"],
    "description": "Hadiwijaya Bore Pile adalah partner konstruksi Jasa Bore Pile dan Jasa Strauss Pile untuk wilayah Pulau Jawa - Bali",
    "legalName": "Hadiwijaya Bore Pile",
    "location": {
      "@id": "https://hadiwijayaborepile.co.id/#place"
    },
    "image": {
      "@id": "https://hadiwijayaborepile.co.id/#logo"
    },
    "telephone": "+6281233624549"
  }
};

const websiteSchema = {
  "@context": "https://schema.org",
  "@graph": {
    "@type": "WebSite",
    "@id": "https://hadiwijayaborepile.co.id/#website",
    "url": "https://hadiwijayaborepile.co.id",
    "name": "Hadiwijaya Bore Pile",
    "alternateName": "Hadiwijaya Bore Pile",
    "publisher": {
      "@id": "https://hadiwijayaborepile.co.id/#organization"
    },
    "inLanguage": "id",
    "potentialAction": {
      "@type": "SearchAction",
      "target": "https://hadiwijayaborepile.co.id/?s={search_term_string}",
      "query-input": "required name=search_term_string"
    }
  }
};
---

<Layout title={title} description={description} keywords={keywords}>
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />

  <PageHero 
    title="Hubungi Kami"
    subtitle="Kami siap mendengar dari Anda. Baik untuk pertanyaan, penawaran, maupun konsultasi proyek."
  />

  <section class="contact-body">
    <div class="contact-container">
      <!-- Contact Form Column -->
      <div class="form-wrapper">
        <h2>Kirim Pesan Whatsapp Langsung</h2>
        <form id="contact-page-form">
          <div class="form-group">
            <label for="name">Nama Lengkap</label>
            <input type="text" id="name" name="name" placeholder="Contoh: Budi" required>
          </div>
          <div class="form-group">
            <label for="email">Alamat Email (Opsional)</label>
            <input type="email" id="email" name="email" placeholder="Contoh: email@anda.com">
          </div>
          <div class="form-group">
            <label for="subject">Subjek Pesan</label>
            <input type="text" id="subject" name="subject" placeholder="Contoh: Penawaran Proyek Rumah" required>
          </div>
          <div class="form-group">
            <label for="message">Pesan Anda</label>
            <textarea id="message" name="message" rows="6" placeholder="Tuliskan detail kebutuhan atau pertanyaan Anda di sini..." required></textarea>
          </div>
          <button type="submit" class="cta-primary">
            <i class="fab fa-whatsapp"></i> Kirim via WhatsApp
          </button>
        </form>
      </div>

      <!-- Info & Map Column -->
      <div class="info-wrapper">
        <h2>Informasi Kontak</h2>
        <p>Hubungi kami melalui detail di bawah atau temukan kami di lokasi.</p>
        
        <ul class="contact-details">
          <li>
            <i class="fas fa-map-marker-alt"></i>
            <span>Manggihan, RT.02/RW.03, Sambung, Kec. Godong, Kabupaten Grobogan, Jawa Tengah 58162, Indonesia</span>
          </li>
          <li>
            <i class="fas fa-phone"></i>
            <span id="contact-phone-number">0812-3362-4549</span>
          </li>
          <li>
            <i class="fas fa-envelope"></i>
            <span>info@hadiningratcorp.com</span>
          </li>
        </ul>

        <div class="map-container">
          <iframe title="Peta Lokasi Hadiwijaya Bore Pile" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d8383.037437584808!2d110.74139457372077!3d-7.066029234586458!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x490336cdce072b8f%3A0x1f48794632c8ef6e!2sHadiwijaya%20Bore%20Pile%20-%20Jasa%20Bore%20Pile%20dan%20Strauss%20Pile%20Manual!5e1!3m2!1sid!2skr!4v1758705712147!5m2!1sid!2skr" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function () {
    const contactForm = document.getElementById('contact-page-form');
    if (contactForm) {
      contactForm.addEventListener('submit', function (event) {
        event.preventDefault();
        
        const name = document.getElementById('name').value;
        const email = document.getElementById('email').value;
        const subject = document.getElementById('subject').value;
        const message = document.getElementById('message').value;
        
        const phoneNumber = '6281233624549';

        let whatsappMessage = `*Pesan dari Halaman Kontak Website*

`;
        whatsappMessage += `*Nama:* ${name}
`;
        if (email) {
          whatsappMessage += `*Email:* ${email}
`;
        }
        whatsappMessage += `*Subjek:* ${subject}

`;
        whatsappMessage += `${message}`;

        const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(whatsappMessage)}`;
        
        window.open(whatsappUrl, '_blank');
        
        contactForm.reset();
      });
    }
  });
</script>

<style>
  .contact-body { padding: 5rem 0; background-color: white; }
  .contact-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: 3fr 2fr;
    gap: 4rem;
  }

  .form-wrapper h2, .info-wrapper h2 {
    font-size: 2.2rem;
    color: var(--secondary-color);
    margin-top: 0;
    margin-bottom: 1.5rem;
  }

  .form-group { margin-bottom: 1.5rem; }
  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: #333;
  }
  .form-group input, .form-group textarea {
    width: 100%;
    padding: 1rem;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: 1rem;
    box-sizing: border-box;
    transition: border-color 0.3s, box-shadow 0.3s;
  }
  .form-group input:focus, .form-group textarea:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(255, 107, 0, 0.2);
    outline: none;
  }

  .cta-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    width: 100%;
    padding: 1rem;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 1.1rem;
    font-weight: 700;
    background-color: var(--primary-color);
    color: white;
    transition: background-color 0.3s, transform 0.2s;
  }
  .cta-primary:hover {
    background-color: #e65200;
    transform: translateY(-2px);
  }
  .cta-primary i {
    font-size: 1.3rem;
  }

  .info-wrapper p {
    line-height: 1.7;
    margin-bottom: 2rem;
  }
  .contact-details {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem 0;
  }
  .contact-details li {
    display: flex;
    align-items: flex-start;
    margin-bottom: 1.5rem;
    font-size: 1.05rem;
  }
  .contact-details li i {
    font-size: 1.4rem;
    color: var(--primary-color);
    margin-right: 1.5rem;
    margin-top: 4px;
    width: 25px;
    text-align: center;
  }

  .map-container {
    margin-top: 2rem;
  }

  @media (max-width: 992px) {
    .contact-container {
      grid-template-columns: 1fr;
      gap: 5rem;
    }
  }
</style>
