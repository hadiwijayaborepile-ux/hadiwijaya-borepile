---
import Layout from '../../layouts/Layout.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import ProductCard from '../../components/ProductCard.astro';
import PageHero from '../../components/PageHero.astro';
import '../../styles/services-jasa-bore-pile.css';
import { fetchProductsPage } from '../../lib/woocommerce';

const products = await fetchProductsPage();

const title = "Layanan Jasa Bore Pile: Manual, Mini Crane & Hydraulic | Hadiwijaya";
const description = "Hadiwijaya Bore Pile menyediakan layanan jasa bore pile lengkap: manual untuk akses terbatas, mini crane untuk efisiensi, dan hydraulic untuk proyek besar. Temukan metode pondasi yang tepat untuk Anda.";
const keywords = ["jasa bore pile", "layanan bore pile", "metode bore pile", "perbandingan bore pile", "bore pile manual", "bore pile mini crane", "bore pile hydraulic", "strauss pile", "solusi pondasi", "kontraktor bore pile", "jenis pondasi bore pile"];

const services = [
  {
    title: 'Bore Pile Manual',
    description: 'Presisi di ruang terbatas, solusi ideal untuk akses sulit.',
    href: '/services/manual',
    imgSrc: '/assets/img/gallery/3.jpg'
  },
  {
    title: 'Bore Pile Mini Crane',
    description: 'Efisiensi mesin untuk proyek skala menengah.',
    href: '/services/mini-crane',
    imgSrc: '/assets/img/gallery/1.jpg'
  },
  {
    title: 'Bore Pile Hydraulic',
    description: 'Kekuatan maksimal untuk proyek skala besar dan infrastruktur.',
    href: '/services/hydraulic',
    imgSrc: '/assets/img/gallery/4.png'
  }
];

const serviceSchema = {
  "@context": "https://schema.org",
  "@graph": {
    "@type": "Service",
    "@id": "https://hadiwijayaborepile.co.id/#service",
    "name": "Hadiwijaya Bore Pile - Jasa Bore Pile Dan Strauss Pile",
    "description": "Hadiwijaya Bore Pile adalah kontraktor penyedia layanan jasa bore pile dan strauss pile manual dengan biaya murah namun tetap mengutamakan kualitas pekerjaan.",
    "url": "https://hadiwijayaborepile.co.id/",
    "serviceType": "Bore Pile",
    "areaServed": [ { "@type": "City", "name": "Jakarta Pusat" } ],
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Metode Pengerjaan Bore Pile",
      "itemListElement": [
        {
          "@type": "OfferCatalog",
          "name": "Bore Pile Manual",
          "description": "Layanan bore pile manual cocok untuk lokasi dengan akses terbatas atau proyek skala kecil di seluruh Jawa &amp; Bali. Metode ini mengandalkan tenaga ahli untuk penggalian lubang pondasi secara presisi.",
          "url": "https://hadiwijayaborepile.co.id/services/manual",
          "itemListElement": [
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Bore Pile Manual",
                "description": "Pengerjaan bore pile manual untuk diameter kecil (20-40 cm) dengan kedalaman terbatas, ideal untuk rumah tinggal dan renovasi.",
                "serviceType": "Bore Pile Manual"
              },
              "priceCurrency": "IDR",
              "price": "80000"
            }
          ]
        }
      ]
    }
  }
}

const breadcrumb = {
    "@type": "BreadcrumbList",
    "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://hadiwijayaborepile.com/"
    },{
        "@type": "ListItem",
        "position": 2,
        "name": "Layanan",
        "item": "https://hadiwijayaborepile.com/services/jasa-bore-pile"
    }]
}
---

<Layout title={title} description={description} keywords={keywords}>
    <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <div class="services-hub-page">
    
    <PageHero 
      title="Jasa Bore Pile untuk Setiap Skala"
      subtitle="Dari renovasi rumah di gang sempit hingga pembangunan gedung pencakar langit, kami memiliki metode bore pile yang tepat untuk menjamin kesuksesan proyek Anda."
    />

    <nav class="container" style="padding: 1.5rem 1rem;">
        <ol style="list-style: none; display: flex; padding: 0;">
          <li style="display: flex; align-items: center;">
            <a href={breadcrumb.itemListElement[0].item}>
              <span>{breadcrumb.itemListElement[0].name}</span>
            </a>
            <span style="margin: 0 0.5rem;">/</span>
          </li>
          <li style="display: flex; align-items: center;">
            <a href={breadcrumb.itemListElement[1].item}>
              <span>{breadcrumb.itemListElement[1].name}</span>
            </a>
          </li>
        </ol>
    </nav>

    <!-- Services Showcase -->
    <section class="showcase">
      <div class="container">
        <div class="showcase-grid">
          {services.map((s) => (
            <ServiceCard service={s} />
          ))}
        </div>
      </div>
    </section>

    <!-- Comparison Section -->
    <section class="comparison">
      <div class="container">
        <h2>Metode Mana yang Tepat untuk Anda?</h2>
        <div class="comparison-table-wrapper">
          <table class="comparison-table">
            <thead>
              <tr>
                <th>Kriteria</th>
                <th>Manual</th>
                <th>Mini Crane</th>
                <th>Hydraulic</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><i class="fas fa-road"></i> Akses Lokasi</td>
                <td>Sangat Sempit</td>
                <td>Cukup Luas</td>
                <td>Sangat Luas</td>
              </tr>
              <tr>
                <td><i class="fas fa-bolt"></i> Kecepatan</td>
                <td>Standar</td>
                <td>Cepat</td>
                <td>Superior</td>
              </tr>
              <tr>
                <td><i class="fas fa-weight-hanging"></i> Kekuatan</td>
                <td>Standar</td>
                <td>Tinggi</td>
                <td>Maksimal</td>
              </tr>
              <tr>
                <td><i class="fas fa-building"></i> Skala Proyek</td>
                <td>Kecil</td>
                <td>Menengah</td>
                <td>Besar & Masif</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </section>

    <!-- Related Products Section -->
    <section class="related-products">
        <div class="container">
            <h2>Area Layanan Yang Kami Sediakan</h2>
            <div class="product-grid">
                {products.map((p) => (
                    <ProductCard product={p} />
                ))}
            </div>
        </div>
    </section>

    <!-- Final CTA -->
    <section class="final-cta">
      <div class="container">
        <h2>Punya Pertanyaan atau Proyek Spesifik?</h2>
        <p>Setiap proyek unik. Tim ahli kami siap membantu Anda memilih metode yang paling efisien dan efektif dari segi biaya untuk kebutuhan konstruksi Anda.</p>
        <a href="/contact" class="cta-button">Konsultasi Gratis</a>
      </div>
    </section>

  </div>
</Layout>

<style>
  .related-products {
    padding: 4rem 0;
  }
  .related-products h2 {
      font-size: 2.2rem;
      text-align: center;
      color: var(--secondary-color);
      margin-bottom: 2.5rem;
  }
  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
</style>
