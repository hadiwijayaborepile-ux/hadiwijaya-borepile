---
import Layout from '../layouts/Layout.astro';
import PageHero from '../components/PageHero.astro';
import Projects from '../components/Projects.astro';

const portfolioProjects = [
  {
    title: 'Proyek Gudang PT Hardo Soloplast',
    description: 'Lokasi: Karanganyar, Solo.',
    image: '/assets/img/proyek/1.png'
  },
  {
    title: 'Proyek Gedung Pusat Data “Cloud Core”',
    description: 'Lokasi: Cikarang, Jawa Barat.',
    image: '/assets/img/hydraulic/hydraulic1.webp'
  },
  {
    title: 'Pembangunan Hotel Bintang 4 “Grand Paradise”',
    description: 'Lokasi: Yogyakarta.',
    image: '/assets/img/hydraulic/hydraulic2.webp'
  },
  {
    title: 'Proyek Perumahan Cluster “Puspita Asri”',
    description: 'Lokasi: Semarang.',
    image: '/assets/img/hydraulic/hydraulic3.webp'
  },
  {
    title: 'Proyek Perkantoran “Tower Biznet”',
    description: 'Lokasi: Semarang.',
    image: '/assets/img/hydraulic/hydraulic4.webp'
  },
  {
    title: 'Pembangunan Fasilitas Golf Semarang “BSB Golf”',
    description: 'Lokasi: Semarang, Jawa Tengah.',
    image: '/assets/img/hydraulic/hydraulic5.webp'
  }
];

const title = "Portofolio Proyek | Hadiwijaya Bore Pile";
const description = "Jelajahi galeri proyek bore pile dan strauss pile yang telah kami kerjakan. Lihat kualitas dan skala pekerjaan kami di berbagai lokasi.";

const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://hadiwijayaborepile.co.id/"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Portfolio"
        }
      ]
    },
    {
      "@type": "ImageGallery",
      "name": "Portofolio Proyek Hadiwijaya Bore Pile",
      "description": "Galeri proyek bore pile dan strauss pile yang telah kami kerjakan.",
      "image": portfolioProjects.map(p => ({
        "@type": "ImageObject",
        "contentUrl": p.image,
        "name": p.title,
        "description": p.description
      }))
    }
  ]
};
---

<Layout title={title} description={description}>
  <script type="application/ld+json" slot="head" set:html={JSON.stringify(schema)} />

  <PageHero 
    title="Portofolio Proyek"
    subtitle="Keahlian kami tercermin dalam setiap proyek yang kami selesaikan. Berikut adalah sebagian dari pekerjaan pondasi bore pile dan strauss pile yang telah kami tangani di berbagai lokasi."
  />

  <Projects projects={portfolioProjects} />

</Layout>

<style>
  .portfolio-gallery {
    padding: 5rem 0;
    background-color: white;
  }
  .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }
  .project-card {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    text-align: left;
    display: flex;
    flex-direction: column;
    border: 1px solid #eee;
  }
  .card-image-wrapper {
    width: 100%;
    padding-top: 133.33%; /* Aspect ratio 3:4 */
    position: relative;
    display: block;
  }
  .project-card img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .card-content {
    padding: 1.5rem;
    flex-grow: 1;
  }
  .card-content h3 {
    margin-top: 0;
    font-size: 1.25rem;
    color: var(--secondary-color);
    margin-bottom: 0.5rem;
  }
  .card-content p {
    font-size: 0.95rem;
    color: #666;
    line-height: 1.6;
  }
  .empty-message {
    text-align: center;
    font-size: 1.1rem;
    color: #777;
    padding: 3rem;
  }
</style>
