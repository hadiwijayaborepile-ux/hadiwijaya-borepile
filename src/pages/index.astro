---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/sections/Hero.astro";
import VisualFeature from "../components/VisualFeature.astro";
import Projects from "../components/Projects.astro";
import Process from "../components/sections/Process.astro";
import Planning from "../components/sections/Planning.astro";
import PriceTable from "../components/sections/PriceTable.astro";
import WhyUs from "../components/sections/WhyUs.astro";
import Faq from "../components/sections/Faq.astro";
import GetInTouch from "../components/sections/GetInTouch.astro";

const title =
  "Jasa Bore Pile Profesional & Terpercaya | Hadiwijaya Bore Pile";
const description =
  "Hadiwijaya Bore Pile adalah kontraktor spesialis jasa bore pile di Indonesia. Kami menawarkan solusi pondasi bore pile manual, mini crane, hingga hydraulic dengan harga kompetitif. Melayani pondasi strauss pile untuk semua skala proyek.";
const keywords = [
  "jasa bore pile",
  "kontraktor bore pile terpercaya",
  "harga jasa bore pile per meter",
  "pondasi bore pile",
  "bore pile manual",
  "strauss pile",
  "bore pile mini crane",
  "bore pile hydraulic",
  "jasa pondasi dalam",
  "pondasi gedung bertingkat",
  "pondasi rumah tinggal",
  "solusi pondasi proyek konstruksi",
  "metode pelaksanaan bore pile",
  "pengeboran kering",
  "pengeboran basah",
  "pengeboran slurry",
  "biaya bore pile",
  "kontraktor pondasi Indonesia",
  "jasa bore pile Semarang",
  "jasa bore pile Yogyakarta",
  "jasa bore pile Solo"
];
---

<Layout title={title} description={description} keywords={keywords}>
  <script
    type="application/ld+json"
    slot="head"
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "HomeAndConstructionBusiness",
      "name": "Hadiwijaya Bore Pile",
      "image": "/assets/img/hbp-logo.png",
      "@id": "https://hadiwijaya-borepile.com", // Ganti dengan URL website Anda yang sebenarnya
      "url": "https://hadiwijaya-borepile.com", // Ganti dengan URL website Anda yang sebenarnya
      "telephone": "+6281234567890", // Ganti dengan nomor telepon Anda
      "priceRange": "Rp50,000 - Rp1,000,000", // Estimasi rentang harga
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Jalan Placeholder No. 123",
        "addressLocality": "Kota Placeholder",
        "addressRegion": "Provinsi Placeholder",
        "postalCode": "12345",
        "addressCountry": "ID",
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": -7.7956, // Placeholder (koordinat Yogyakarta)
        "longitude": 110.3695,
      },
      "openingHoursSpecification": {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": [
          "Monday",
          "Tuesday",
          "Wednesday",
          "Thursday",
          "Friday",
          "Saturday",
          "Sunday",
        ],
        "opens": "08:00",
        "closes": "17:00",
      },
      "sameAs": [
        // "https://www.facebook.com/your-business",
        // "https://www.instagram.com/your-business"
      ],
      "potentialAction": {
        "@type": "ReserveAction",
        "target": {
          "@type": "EntryPoint",
          "urlTemplate": "https://hadiwijaya-borepile.com/contact", // Ganti dengan URL kontak Anda
          "inLanguage": "id-ID",
          "actionPlatform": [
            "http://schema.org/DesktopWebPlatform",
            "http://schema.org/IOSPlatform",
            "http://schema.org/AndroidPlatform",
          ],
        },
        "result": {
          "@type": "Reservation",
          "name": "Konsultasi Proyek Bore Pile",
        },
      },
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Layanan Bore Pile",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Jasa Bore Pile Strauss/Manual",
            },
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Jasa Bore Pile Mini Crane",
            },
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Jasa Bore Pile Hydraulic",
            },
          },
        ],
      },
    })}
  />
  <Hero slot="hero" />
  <VisualFeature />
  <Projects />
  <Process />
  <Planning />
  <PriceTable />
  <WhyUs />
  <Faq />
  <GetInTouch />
</Layout>

<style>
  .homepage-map {
    padding-top: 5rem;
  }
</style>