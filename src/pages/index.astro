  "jasa bore pile",
  "kontraktor bore pile terpercaya",
  "harga jasa bore pile per meter",
  "pondasi bore pile",
  "bore pile manual",
  "strauss pile",
  "bore pile mini crane",
  "bore pile hydraulic",
  "jasa pondasi dalam",
  "pondasi gedung bertingkat",
  "pondasi rumah tinggal",
  "solusi pondasi proyek konstruksi",
  "metode pelaksanaan bore pile",
  "pengeboran kering",
  "pengeboran basah",
  "pengeboran slurry",
  "biaya bore pile",
  "kontraktor pondasi Indonesia",
  "jasa bore pile Semarang",
  "jasa bore pile Yogyakarta",
  "jasa bore pile Solo"
];

const homeProjects = [
  {
    title: 'Proyek Gudang PT Hardo Soloplast',
    description: 'Lokasi: Karanganyar, Solo.',
