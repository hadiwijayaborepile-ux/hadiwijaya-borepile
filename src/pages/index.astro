      "https://www.pinterest.com/hadiwijayaborepile/",
      "maps.app.goo.gl/MNy1REVADT8A2wzB6"
    ],
    "email": "info@hadiningratcorp.com",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Manggihan RT 02 RW 03, Sambung",
      "addressLocality": "Godong",
      "addressRegion": "Grobogan",
