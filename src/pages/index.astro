const websiteSchema = {
  "@context": "https://schema.org",
  "@graph": {
    "@type": "WebSite",
    "@id": "https://hadiwijayaborepile.co.id/#website",
    "url": "https://hadiwijayaborepile.co.id",
    "name": "Hadiwijaya Bore Pile",
    "alternateName": "Hadiwijaya Bore Pile",
    "publisher": {
      "@id": "https://hadiwijayaborepile.co.id/#organization"
    },
    "inLanguage": "id",
    "potentialAction": {
      "@type": "SearchAction",
      "target": "https://hadiwijayaborepile.co.id/?s={search_term_string}",
      "query-input": "required name=search_term_string"
    }
  }
};
---

<Layout title={title} description={description} keywords={keywords}>
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />

  <Hero slot="hero" />
  <VisualFeature />
  <Projects projects={homeProjects} showCta={true} />
  <Process />
